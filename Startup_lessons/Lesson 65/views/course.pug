doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/style.css')
        title Courses
    body
        .course
            .title #{course.title}
            .img
                img(src=`${course.link}`, alt="")
            .description #{course.description}
            .price #{course.price}
            .course-view-btn
                a(href="/") 
                    button Main page